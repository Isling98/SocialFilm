<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="16dp"
    card_view:cardBackgroundColor="@color/theme4"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:layout_constraintTop_toTopOf="parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="4dp" />


        <TextView
            android:id="@+id/headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="-1dp"
            android:layout_toEndOf="@+id/profilePic"
            android:text="Ã…kanden gjorde noget:"
            android:textSize="24sp"
            android:textColor="@color/theme1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headline"
            android:layout_marginStart="0dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@+id/profilePic"
            android:text="I love Markus"
            android:textColor="@color/theme1"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/moviePic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/profilePic"
            android:padding="4dp" />

        <TextView
            android:id="@+id/movieTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text"
            android:layout_alignParentTop="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="81dp"
            android:layout_toEndOf="@+id/moviePic"
            android:text="Harry Potter (2001):"
            android:textSize="22sp"
            android:textColor="@color/theme1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headline"
            android:layout_marginStart="3dp"
            android:layout_marginTop="103dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@+id/profilePic"
            android:text="9/10 *"
            android:textColor="@color/theme1"
            android:textSize="18sp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>