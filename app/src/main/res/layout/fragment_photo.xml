<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">

    <ImageView
        android:id="@+id/newProfilePic"
        android:layout_width="369dp"
        android:layout_height="460dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="39dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profilePicText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:text="Your new profile picture"
        android:textColor="@color/theme1"
        app:layout_constraintBottom_toTopOf="@+id/newProfilePic"
        app:layout_constraintEnd_toEndOf="@+id/newProfilePic"
        app:layout_constraintStart_toStartOf="@+id/newProfilePic" />

    <ImageButton
        android:id="@+id/confirmNewProfile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="@+id/newProfilePic"
        app:layout_constraintStart_toStartOf="@+id/newProfilePic"
        app:layout_constraintTop_toBottomOf="@+id/newProfilePic"
        app:srcCompat="@android:drawable/ic_menu_camera"
        android:background="@color/theme2_faded"/>
</androidx.constraintlayout.widget.ConstraintLayout>