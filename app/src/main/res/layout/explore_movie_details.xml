<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="310dp"
    android:layout_height="400dp"
    android:background="@drawable/popup_news_detail_background">


    <ImageView
        android:id="@+id/moviePicture"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:padding="4dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="140dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/movieTitleExplore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harry Potter"
        android:textSize="26dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/theme1"
        android:fontFamily="sans-serif-light"
        app:layout_constraintEnd_toEndOf="@+id/moviePicture"
        app:layout_constraintStart_toStartOf="@+id/moviePicture"
        app:layout_constraintTop_toBottomOf="@+id/moviePicture" />





    <ImageView
        android:id="@+id/closeButton2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:padding="6dp"
        android:src="@drawable/close_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.986"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/readMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="READ MORE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>