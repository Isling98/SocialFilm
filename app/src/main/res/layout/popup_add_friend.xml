<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">



    <EditText
        android:id="@+id/addFriendUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Type username"
        android:ems="10"
        android:textColor="@color/light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/closeButton2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:padding="6dp"
        android:src="@drawable/close_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.986"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/addFriendTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Add your friend on Cinemano"
        android:textColor="@color/light"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addfriendDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="You only need their username"
        android:textColor="@color/light"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/addFriendTitle"
        app:layout_constraintStart_toStartOf="@+id/addFriendTitle"
        app:layout_constraintTop_toBottomOf="@+id/addFriendTitle" />

    <Button
        android:id="@+id/addFriendConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Friend Request"
        android:textColor="@color/theme1"
        android:textAllCaps="false"
        android:backgroundTint="@color/theme2_faded"
        app:layout_constraintEnd_toEndOf="@+id/addFriendUsername"
        app:layout_constraintStart_toStartOf="@+id/addFriendUsername"
        app:layout_constraintTop_toBottomOf="@+id/addFriendUsername"
        android:layout_marginTop="25dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>